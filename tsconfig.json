{
  "include": ["./**/*"],
  "compilerOptions": {
    "module": "NodeNext",
    "lib": ["ESNext"],
    "moduleResolution": "nodenext",
    "jsx": "react-jsx",
    "jsxImportSource": "hastscript",

    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true
  },
  "typeAcquisition": {
    "enable": false
  }
}
